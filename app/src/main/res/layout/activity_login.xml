<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/color_primary_text"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/login_layout"
        android:gravity="center"
        android:layout_margin="25dp"
        android:paddingTop="40dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="login here"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:paddingLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="12dp"
                    android:text="Email"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textSize="13dp"
                        android:layout_gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_weight="1"
                        android:id="@+id/etEmail"
                        android:inputType="text"
                        android:text="susan@gmail.com"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="#00000000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"/>

                <!-- SMS code -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="12dp"
                    android:textColor="@color/textColor"
                    android:text="Password"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:id="@+id/etPassword"
                        android:hint="Password"
                        android:text="123456"
                        android:inputType="textPassword"
                        android:layout_gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_marginTop="4dp"
                        android:background="#00000000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="#cccccc"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Signin Now"
                    android:textSize="13dp"
                    android:id="@+id/btnLogin"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/create_account_button"
                    android:textColor="@color/colorWhite"
                    android:paddingLeft="60dp"
                    android:paddingRight="60dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Are you new! Click to create new account here"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/create"
                    android:paddingTop="7dp"
                    android:textStyle="bold"
                    android:paddingBottom="7dp"
                    android:textColor="@color/textColor"
                    android:textSize="12dp"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>